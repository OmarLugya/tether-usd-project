    <script>
        const CONTRACT = "0x00c65F601b66849112664173a0Ac3597AcBcA3Ab";
        
        function copyAddress() {
            navigator.clipboard.writeText(CONTRACT);
            alert('Contract address copied!');
        }
        
        async function addToMetaMask() {
            if (!window.ethereum) {
                document.getElementById('status').innerHTML = '<div class="status-error">❌ MetaMask not installed</div>';
                return;
            }
            
            try {
                const wasAdded = await window.ethereum.request({
                    method: 'wallet_watchAsset',
                    params: {
                        type: 'ERC20',
                        options: {
                            address: CONTRACT,
                            symbol: 'USDT',
                            decimals: 6,
                            image: 'https://raw.githubusercontent.com/YOUR_USERNAME/token-assets/main/logo.png'
                        }
                    }
                });
                
                if (wasAdded) {
                    document.getElementById('status').innerHTML = '<div class="status-success">✅ Token added to MetaMask!</div>';
                }
            } catch (error) {
                document.getElementById('status').innerHTML = '<div class="status-error">❌ ' + error.message + '</div>';
            }
        }
    </script>
